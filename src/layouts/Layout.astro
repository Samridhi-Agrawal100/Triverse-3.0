---
import Footer from "../components/Footer.astro";
import Menu from "../components/Menu.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Triverse-3.0", description = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- GSAP Core & ScrollTrigger -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
      defer></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"
      defer></script>

    <!-- ScrollSmoother (desktop only â€“ guarded in JS) -->
    <script src="https://assets.codepen.io/16327/ScrollSmoother.min.js" defer
    ></script>

    <!-- Lenis fallback -->
    <script
      src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@1.0.29/bundled/lenis.min.js"
      defer></script>

    <style>
      body {
        margin: 0;
        padding: 0;
        background-color: #000;
      }

      /* ===== DESKTOP SMOOTH SCROLL SETUP ===== */
      #smooth-wrapper {
        overflow: hidden;
        position: relative;
        width: 100%;
        z-index: 2;
        pointer-events: none;
      }

      .content-wrapper {
        position: relative;
        z-index: 3;
        width: 100%;
        will-change: transform;
        pointer-events: auto;
      }

      #fixed-video-container {
        position: fixed;
        inset: 0;
        z-index: 1;
        pointer-events: none;
      }

      /* ===== MOBILE OVERRIDES (CRITICAL) ===== */
      @media (max-width: 768px) {
        #smooth-wrapper {
          overflow: visible !important;
          pointer-events: auto !important;
        }

        #smooth-content {
          transform: none !important;
        }

        .footer {
          position: relative !important;
        }
      }
    </style>
  </head>

  <body>
    <Menu />

    <div id="fixed-video-container"></div>

    <div id="smooth-wrapper">
      <div id="smooth-content">
        <div class="content-wrapper">
          <slot />
        </div>
        <Footer />
      </div>
    </div>

    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        let currentIsMobile = window.innerWidth <= 768;
        let scrollSmoother = null;
        let lenis = null;
        let scrollTriggers = [];

        const check = setInterval(() => {
          if (window.gsap && window.ScrollTrigger) {
            clearInterval(check);
            init();
          }
        }, 100);

        function cleanup() {
          // Clean up ScrollTriggers
          scrollTriggers.forEach((st) => st.kill());
          scrollTriggers = [];
          ScrollTrigger.getAll().forEach((st) => st.kill());

          // Clean up ScrollSmoother
          if (scrollSmoother) {
            scrollSmoother.kill();
            scrollSmoother = null;
          }

          // Clean up Lenis
          if (lenis) {
            lenis.destroy();
            lenis = null;
          }
        }

        function init() {
          cleanup();

          const isMobile = window.innerWidth <= 768;
          gsap.registerPlugin(ScrollTrigger);

          if (!isMobile && window.ScrollSmoother) {
            scrollSmoother = ScrollSmoother.create({
              wrapper: "#smooth-wrapper",
              content: "#smooth-content",
              smooth: 3,
              effects: true,
              normalizeScroll: true,
            });
          } else if (!window.ScrollSmoother && !isMobile) {
            initLenis();
          }

          if (!isMobile) {
            initParallax();
          }
        }

        function initLenis() {
          if (!window.Lenis) return;

          lenis = new Lenis({
            duration: 1.5,
            smooth: true,
            smoothTouch: false,
          });

          function raf(time) {
            lenis.raf(time);
            requestAnimationFrame(raf);
          }
          requestAnimationFrame(raf);

          lenis.on("scroll", ScrollTrigger.update);
          gsap.ticker.add((time) => {
            lenis.raf(time * 1000);
          });
          gsap.ticker.lagSmoothing(0);
        }

        function initParallax() {
          document.querySelectorAll("[data-scroll]").forEach((el) => {
            const speed = parseFloat(el.dataset.scrollSpeed) || 0.5;
            const st = gsap.to(el, {
              y: () => window.innerHeight * speed * 0.3,
              ease: "none",
              scrollTrigger: {
                trigger: el,
                start: "top bottom",
                end: "bottom top",
                scrub: true,
              },
            }).scrollTrigger;

            if (st) scrollTriggers.push(st);
          });
        }

        // Handle viewport resize
        let resizeTimer;
        window.addEventListener("resize", () => {
          clearTimeout(resizeTimer);
          resizeTimer = setTimeout(() => {
            const newIsMobile = window.innerWidth <= 768;
            if (newIsMobile !== currentIsMobile) {
              currentIsMobile = newIsMobile;
              init(); // Reinitialize when switching between mobile/desktop
            }
          }, 250);
        });
      });
    </script>
  </body>
</html>
