---
import '../assets/footer.css';

import { Image } from 'astro:assets';
import clubLogo from '../images/club.png';
import triverseLogo from '../images/logo.png';
---

<footer class="footer" id="footer">
  <div class="footer-bg-pattern"></div>

  <!-- Subtle large logo watermark in the background -->
  <div class="footer-logo-watermark">
    <img src={triverseLogo.src} alt="Triverse watermark" loading="lazy" />
  </div>

  <div class="footer-container">
    <div class="footer-top">
      <!-- Left Section: Nav & Logo -->
      <div class="footer-column footer-left">
        <div class="footer-logo-wrapper">
          <Image src={clubLogo} alt="IEEE" width={200} format="png" />
        </div>
        <nav class="footer-nav">
          <ul>
            <li><a href="/">HOME</a></li>
            <li><a href="/events">EVENTS</a></li>
            <li><a href="/teams">TEAMS</a></li>
            <li><a href="/sponsors">SPONSORS</a></li>
          </ul>
        </nav>
      </div>

      <!-- Center Section: IEEE & Partners -->
      <div class="footer-column footer-center">
        <Image src={triverseLogo} alt="IEEE" width={400} height={133} format="png" />
        <div class="partner-logos">
          <div class="partner-logo-placeholder">
            <span>Student Cabinet<br/>School of CSET</span>
          </div>
          <div class="partner-logo-placeholder">
            <span>Bennett University<br/>The Times Group</span>
          </div>
        </div>
        <!-- Tech Club Logo Placeholder -->
         <div class="tech-club-logo">
            <span class="icon-tech-club"></span>
         </div>
      </div>

      <!-- Right Section: Contact Information -->
      <div class="footer-column footer-right">
        <div class="contact-section">
          <h3>Contact Us</h3>
          <div class="contact-info">
            <div class="contact-item">
              <span class="contact-label">Chairperson</span>
              <span class="contact-value">Devansh Kumar</span>
            </div>
            <div class="contact-item">
              <span class="contact-label">Vice Chairperson</span>
              <span class="contact-value">Manya Chaubey</span>
            </div>
            <div class="contact-item">
              <span class="contact-label">Email</span>
              <a href="mailto:ieee@bennett.edu.in" class="contact-value">ieee@bennett.edu.in</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <div class="copyright">
        &copy; TRIVERSE / ALL RIGHTS RESERVED
      </div>

      <div class="footer-made-by">
        <span class="made-by-label">Made with ❤️ by:</span>
        <div class="team-grid">
          <!-- Add team member avatars here -->
          <div class="team-member">
            <div class="team-avatar"></div>
          </div>
          <div class="team-member">
            <div class="team-avatar"></div>
          </div>
          <div class="team-member">
            <div class="team-avatar"></div>
          </div>
          <div class="team-member">
            <div class="team-avatar"></div>
          </div>
          <!-- Add more team members as needed -->
        </div>
      </div>
    </div>
  </div>
</footer>
