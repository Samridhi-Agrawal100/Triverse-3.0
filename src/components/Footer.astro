---
import "../assets/footer.css";

import { Image } from "astro:assets";
import clubLogo from "../images/club.png";
import triverseLogo from "../images/logo.png";

const isEventsPage = Astro.url.pathname === "/events";
const footerClass = `footer${isEventsPage ? " footer-animate" : ""}`;
import benuniLogo from "../images/benuni.png";
import rishabhImg from "../images/team/office-bearer/Rishabh_Verma.png";
import gyanendraImg from "../images/team/tech/gyanendra.png";
import samridhiImg from "../images/team/tech/samridhi-agrawal.png";
import lakshyaImg from "../images/team/tech/Lakshya.png";
import shrutiImg from "../images/team/tech/shruti.png";
---

<footer class={footerClass} id="footer">
  <div class="footer-bg-pattern"></div>

  <!-- Subtle large logo watermark in the background -->
  <div class="footer-logo-watermark">
    <img src={triverseLogo.src} alt="Triverse watermark" loading="lazy" />
  </div>

  <div class="footer-container">
    <div class="footer-top">
      <!-- Left Section: Nav & Logo -->
      <div class="footer-column footer-left">
        <div class="footer-logo-wrapper">
          <Image src={clubLogo} alt="IEEE" width={150} format="png" />
        </div>
        <nav class="footer-nav">
          <ul>
            <li><a href="/">HOME</a></li>
            <li><a href="/events">EVENTS</a></li>
            <li><a href="/teams">TEAMS</a></li>
            <li><a href="/sponsors">SPONSORS</a></li>
          </ul>
        </nav>

        <!-- Moved from Center: Bennett Logo & Tagline -->
        <div class="partner-logos">
          <Image
            src={benuniLogo}
            alt="Bennett University"
            width={150}
            format="png"
            class="partner-logo-img"
          />
        </div>
        <p class="footer-description" style="text-align: left;">
          A cosmic journey through space and innovation
        </p>
      </div>

      <!-- Center Section: IEEE & Partners -->
      <div class="footer-column footer-center">
        <div class="footer-center-logo-wrapper">
          <Image
            src={triverseLogo}
            alt="Triverse Logo"
            width={500}
            height={167}
            format="png"
            class="footer-center-logo-img"
          />
        </div>
        <!-- Tech Club Logo Placeholder -->
        <div class="tech-club-logo">
          <span class="icon-tech-club"></span>
        </div>
      </div>

      <!-- Right Section: Contact Information -->
      <div class="footer-column footer-right">
        <div class="contact-section">
          <h3>Contact Us</h3>
          <div class="contact-info">
            <div class="contact-item">
              <span class="contact-label">Chairperson</span>
              <span class="contact-value">Devansh Kumar</span>
              <a href="tel:+91XXXXXXXXXX" class="contact-phone"
                >+91 70074 84933</a
              >
            </div>
            <div class="contact-item">
              <span class="contact-label">Vice Chairperson</span>
              <span class="contact-value">Manya Chaubey</span>
              <a href="tel:+91XXXXXXXXXX" class="contact-phone"
                >+91 87070 98081</a
              >
            </div>
            <div class="contact-item">
              <span class="contact-label">Email</span>
              <a href="mailto:ieee@bennett.edu.in" class="contact-value"
                >ieee@bennett.edu.in</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <div class="copyright">&copy; TRIVERSE / ALL RIGHTS RESERVED</div>

      <div class="footer-made-by">
        <span class="made-by-label">Made with ❤️ by:</span>
        <div class="team-grid">
          <!-- Add team member avatars here -->
          <div class="team-member">
            <div class="team-avatar">
              <Image src={rishabhImg} alt="Rishabh Verma" />
            </div>
          </div>
          <div class="team-member">
            <div class="team-avatar">
              <Image src={gyanendraImg} alt="Gyanendra" />
            </div>
          </div>
          <div class="team-member">
            <div class="team-avatar">
              <Image src={samridhiImg} alt="Samridhi" />
            </div>
          </div>
          <div class="team-member">
            <div class="team-avatar">
              <Image src={lakshyaImg} alt="Lakshya" />
            </div>
          </div>
          <div class="team-member">
            <div class="team-avatar">
              <Image src={shrutiImg} alt="Shruti" />
            </div>
          </div>
          <!-- Add more team members as needed -->
        </div>
      </div>
    </div>
  </div>
</footer>
