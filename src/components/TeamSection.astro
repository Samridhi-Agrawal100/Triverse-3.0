---
import teamData from '../data/team-details.json';

interface Props {
  teamName: string;
}

const { teamName } = Astro.props;

const team = teamData.teams.find(
  t => t.name.toLowerCase() === teamName.toLowerCase()
);

if (!team) {
  console.error(`Team "${teamName}" not found`);
}
---

{team && (
  <section class="team-section">

    <!-- LEAD -->
    <div class="lead-row left">
      <div class="avatar-wrap lead-avatar">
        <img src={team.lead.image} alt={team.lead.name} />
      </div>
      <div class="info">
        <h3>{team.lead.name}</h3>
        <p>{team.lead.role}</p>
      </div>
    </div>

    <!-- CO-LEAD -->
    <div class="lead-row right">
      <div class="info">
        <h3>{team.colead.name}</h3>
        <p>{team.colead.role}</p>
      </div>
      <div class="avatar-wrap lead-avatar">
        <img src={team.colead.image} alt={team.colead.name} />
      </div>
    </div>

    <!-- MEMBERS -->
    {team.members.length > 0 && (
      <div class="members-grid">
        {team.members.map(member => (
          <div class="member-card">
            <div class="avatar-wrap member-avatar">
              <img src={member.image} alt={member.name} />
            </div>
            <h4>{member.name}</h4>
            <p>{member.role}</p>
          </div>
        ))}
      </div>
    )}

  </section>
)}

<style>
/* ---------- SECTION ---------- */
.team-section {
  max-width: 1100px;
  margin: -3rem auto 0;
  padding: 0 1rem;
}

/* ---------- AVATAR WITH GALAXY BACKGROUND ---------- */
.avatar-wrap {
  position: relative;
  width: 220px;
  height: 220px;
  border-radius: 50%;
  overflow: hidden;

  /* âœ… ONLY RELIABLE WAY */
  background-image: url('/galaxy.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;

  border: 3px solid white;

  display: flex;
  justify-content: center;
  align-items: center;
}

/* ---------- STICKER IMAGE ---------- */
.avatar-wrap img {
  width: 90%;
  height: 90%;
  object-fit: contain;
  z-index: 1;
  background: transparent;

  filter:
    drop-shadow(2px 0 0 white)
    drop-shadow(-2px 0 0 white)
    drop-shadow(0 2px 0 white)
    drop-shadow(0 -2px 0 white);

  transition: transform 0.3s ease;
}

.avatar-wrap img:hover {
  transform: scale(1.06);
}

/* ---------- LEAD / CO-LEAD ---------- */
.lead-row {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

.lead-row.left {
  justify-content: flex-start;
  margin-bottom: -8rem;
}

.lead-row.right {
  justify-content: flex-end;
  margin-bottom: 2rem;
}

.lead-row h3 {
  font-size: 1.85rem;
  margin-bottom: 0.4rem;
}

.lead-row p {
  font-size: 1.1rem;
  color: #bbb;
}

/* ---------- MEMBERS GRID ---------- */
.members-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 1.2rem;
  margin-top: 0.5rem;
}

.member-card {
  text-align: center;
  transition: transform 0.3s ease;
}

.member-card:hover {
  transform: translateY(-10px);
}

.member-card h4 {
  font-size: 0.95rem;
  margin-bottom: 0.3rem;
}

.member-card p {
  font-size: 0.85rem;
  color: #aaa;
}

/* ---------- RESPONSIVE ---------- */
@media (max-width: 768px) {
  .lead-row {
    flex-direction: column;
    text-align: center;
  }

  .lead-row.left {
    margin-bottom: 2.5rem;
  }

  .lead-row.right {
    margin-bottom: 2rem;
  }

  .avatar-wrap {
    width: 205px;
    height: 205px;
  }
}
</style>
