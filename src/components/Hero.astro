---
// Hero section matching the reference image
---

<div class="hero-container">
	<!-- Starry Background with Bokeh Effect -->
	<div class="stars-background">
		<div class="bokeh-stars"></div>
	</div>
	
	<!-- Top Spotlight - Cone beam from top center -->
	<div class="top-spotlight" id="topSpotlight"></div>
	
	<!-- Bottom Purple Glow Arc -->
	<div class="bottom-glow-arc" id="bottomGlow"></div>
	
	<!-- Planet Arc Image -->
	<div class="planet-arc-wrapper">
		<img 
			src="/arc.png" 
			alt="Planet Arc" 
			class="planet-arc"
			id="planetArc"
		/>
	</div>
	
	<!-- Logo and Text Container -->
	<div class="logo-text-container" id="logoContainer">
		<div class="logo-blend-wrapper">
			<img 
				src="/logo.png" 
				alt="Triverse Logo" 
				class="triverse-logo"
				id="triverseLogo"
			/>
		</div>
	</div>
</div>

<script is:inline>
	(function() {
		function initAnimations() {
			if (typeof window === 'undefined' || !window.gsap) {
				setTimeout(initAnimations, 100);
				return;
			}
			
			const logoContainer = document.getElementById('logoContainer');
			const logoBlendWrapper = logoContainer?.querySelector('.logo-blend-wrapper');
			const triverseLogo = document.getElementById('triverseLogo');
			const topSpotlight = document.getElementById('topSpotlight');
			const bottomGlow = document.getElementById('bottomGlow');
			const planetArc = document.getElementById('planetArc');
			
			if (!logoContainer || !triverseLogo || !topSpotlight || !bottomGlow || !planetArc) {
				setTimeout(initAnimations, 100);
				return;
			}
			
			const gsap = window.gsap;
			
			// Set blend mode for logo
			if (logoBlendWrapper) {
				logoBlendWrapper.style.mixBlendMode = 'screen';
			}
			
			// Set initial states
			gsap.set([logoContainer, topSpotlight, bottomGlow, planetArc], {
				opacity: 0
			});
			
			gsap.set(topSpotlight, {
				scaleY: 0,
				transformOrigin: 'top center'
			});
			
			gsap.set(bottomGlow, {
				scaleX: 0,
				transformOrigin: 'center center'
			});
			
			gsap.set(planetArc, {
				scaleY: 0,
				transformOrigin: 'bottom center'
			});
			
			// Create timeline
			const tl = gsap.timeline({ delay: 0.3 });
			
			// Animate bottom glow arc appearing
			tl.to(bottomGlow, {
				scaleX: 1,
				opacity: 1,
				duration: 1.2,
				ease: 'power2.out'
			})
			// Animate planet arc rising
			.to(planetArc, {
				scaleY: 1,
				opacity: 1,
				duration: 1,
				ease: 'power2.out'
			}, '-=0.8')
			// Animate top spotlight appearing
			.to(topSpotlight, {
				scaleY: 1,
				opacity: 1,
				duration: 1.5,
				ease: 'power3.out'
			}, '-=0.5')
			// Fade in logo
			.to(logoContainer, {
				opacity: 1,
				duration: 1.5,
				ease: 'power2.out'
			}, '-=1.2');
			
			// Subtle spotlight pulse
			gsap.to(topSpotlight, {
				opacity: 0.85,
				duration: 3,
				repeat: -1,
				yoyo: true,
				ease: 'sine.inOut',
				delay: 2
			});
		}
		
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', initAnimations);
		} else {
			initAnimations();
		}
	})();
</script>

<style>
	.hero-container {
		position: relative;
		width: 100%;
		height: 100vh;
		overflow: hidden;
		background: #000000;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	
	/* Starry Background with Bokeh */
	.stars-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: radial-gradient(ellipse at bottom, #1a0033 0%, #000000 100%);
		z-index: 1;
	}
	
	.bokeh-stars {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: 
			radial-gradient(3px 3px at 15% 25%, rgba(255, 255, 255, 0.9), transparent),
			radial-gradient(2px 2px at 35% 45%, rgba(200, 220, 255, 0.8), transparent),
			radial-gradient(4px 4px at 55% 15%, rgba(255, 255, 255, 0.7), transparent),
			radial-gradient(2px 2px at 75% 65%, rgba(220, 200, 255, 0.8), transparent),
			radial-gradient(3px 3px at 25% 75%, rgba(255, 255, 255, 0.9), transparent),
			radial-gradient(2px 2px at 85% 35%, rgba(200, 220, 255, 0.7), transparent),
			radial-gradient(4px 4px at 45% 85%, rgba(255, 255, 255, 0.8), transparent),
			radial-gradient(2px 2px at 65% 5%, rgba(220, 200, 255, 0.9), transparent),
			radial-gradient(3px 3px at 5% 55%, rgba(255, 255, 255, 0.7), transparent),
			radial-gradient(2px 2px at 95% 75%, rgba(200, 220, 255, 0.8), transparent),
			radial-gradient(4px 4px at 30% 30%, rgba(255, 255, 255, 0.6), transparent),
			radial-gradient(2px 2px at 70% 50%, rgba(220, 200, 255, 0.7), transparent),
			radial-gradient(3px 3px at 10% 80%, rgba(255, 255, 255, 0.9), transparent),
			radial-gradient(2px 2px at 90% 20%, rgba(200, 220, 255, 0.8), transparent);
		background-size: 100% 100%;
		animation: twinkle 8s ease-in-out infinite;
		filter: blur(1px);
	}
	
	@keyframes twinkle {
		0%, 100% { opacity: 0.7; }
		50% { opacity: 1; }
	}
	
	/* Top Spotlight - Cone beam from top center */
	.top-spotlight {
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 80%;
		height: 70%;
		background: radial-gradient(
			ellipse 80% 100% at 50% 0%,
			rgba(138, 43, 226, 0.4) 0%,
			rgba(186, 85, 211, 0.3) 30%,
			rgba(221, 160, 221, 0.2) 50%,
			rgba(255, 20, 147, 0.1) 70%,
			transparent 100%
		);
		z-index: 3;
		transform-origin: top center;
		filter: blur(40px);
		pointer-events: none;
	}
	
	/* Bottom Purple Glow Arc - Horizontal across bottom */
	.bottom-glow-arc {
		position: absolute;
		bottom: 15%;
		left: 0;
		width: 100%;
		height: 200px;
		background: linear-gradient(
			180deg,
			transparent 0%,
			rgba(138, 43, 226, 0.3) 20%,
			rgba(186, 85, 211, 0.6) 40%,
			rgba(221, 160, 221, 0.8) 50%,
			rgba(255, 20, 147, 0.9) 60%,
			rgba(186, 85, 211, 0.6) 80%,
			transparent 100%
		);
		filter: blur(80px);
		z-index: 2;
		transform-origin: center center;
		pointer-events: none;
	}
	
	/* Planet Arc Wrapper */
	.planet-arc-wrapper {
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		height: auto;
		display: flex;
		align-items: flex-end;
		justify-content: center;
		z-index: 4;
		transform-origin: bottom center;
	}
	
	.planet-arc {
		width: 100%;
		height: auto;
		object-fit: cover;
		object-position: bottom;
		display: block;
		filter: drop-shadow(0 -20px 60px rgba(138, 43, 226, 0.3));
		transform-origin: bottom center;
	}
	
	/* Logo Container */
	.logo-text-container {
		position: absolute;
		top: 45%;
		left: 50%;
		transform: translate(-50%, -50%);
		z-index: 5;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	
	.logo-blend-wrapper {
		mix-blend-mode: screen;
		display: inline-block;
		position: relative;
	}
	
	.triverse-logo {
		max-width: 700px;
		width: 80vw;
		height: auto;
		filter: 
			drop-shadow(0 0 20px rgba(255, 255, 255, 0.4))
			drop-shadow(0 0 40px rgba(186, 85, 211, 0.6))
			drop-shadow(0 0 60px rgba(138, 43, 226, 0.5))
			drop-shadow(0 4px 8px rgba(138, 43, 226, 0.7));
		display: block;
		object-fit: contain;
	}
	
	/* Responsive Design */
	@media (max-width: 768px) {
		.triverse-logo {
			max-width: 90vw;
		}
		
		.top-spotlight {
			width: 100%;
			height: 60%;
		}
		
		.bottom-glow-arc {
			height: 150px;
			bottom: 12%;
		}
		
		
		.logo-text-container {
			top: 48%;
		}
	}
	
	@media (max-width: 480px) {
		.logo-text-container {
			top: 50%;
		}
		
		.bottom-glow-arc {
			height: 120px;
		}
	}
</style>
