---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Teams - Triverse">
    <main style="color: white;">
        <!-- Hero Section -->
        <section style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #0a0e27 0%, #1a1a3e 50%, #0f0f2e 100%); position: relative; overflow: hidden;">
            <!-- Animated stars background -->
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none;">
                <div style="position: absolute; width: 2px; height: 2px; background: white; border-radius: 50%; opacity: 0.6; animation: twinkle 3s infinite;" style="top: 10%; left: 15%;"></div>
                <div style="position: absolute; width: 1px; height: 1px; background: white; border-radius: 50%; opacity: 0.8; animation: twinkle 4s infinite;" style="top: 20%; left: 80%;"></div>
                <div style="position: absolute; width: 2px; height: 2px; background: white; border-radius: 50%; opacity: 0.5; animation: twinkle 5s infinite;" style="top: 60%; left: 20%;"></div>
            </div>

            <div style="text-align: center; z-index: 10; max-width: 800px; padding: 40px;">
                <h1 style="font-size: 4rem; font-weight: bold; margin-bottom: 20px; text-shadow: 0 0 20px rgba(100, 200, 255, 0.8); letter-spacing: 3px;">OUR TEAMS</h1>
                <p style="font-size: 1.2rem; line-height: 1.8; color: #b0c4de; text-shadow: 0 0 10px rgba(100, 200, 255, 0.5); font-weight: 300;">
                    Meet the passionate individuals who make Triverse possible. Our dedicated teams work tirelessly to create an unforgettable experience.
                </p>
            </div>

            <!-- Curvy Divider at bottom of hero -->
            <svg style="position: absolute; bottom: -1px; left: 0; width: 100%; height: 120px; display: block;" viewBox="0 0 1440 120" preserveAspectRatio="none">
                <path d="M0,60 Q360,0 720,60 T1440,60 L1440,120 L0,120 Z" fill="#1a1a2e"></path>
            </svg>
        </section>

        <!-- Team Section 1 -->
        <section style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background: #1a1a2e; padding: 60px 20px; color: white; position: relative;">
